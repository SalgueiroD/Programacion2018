// condicional.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()

{
	float promedio,a,b,c;
	cout<< "ingresa a: "<<endl;
	cin>> a;
	if (a<=10 && a>0)
	{
		cout<< "ingrese b: "<<endl;
		cin>> b;
		if (b<=10 && b>0)
		{
			cout<< "ingrese c: "<<endl;
			cin>> c;
			if (c<=10 && c>0)
			{
				promedio=(a+b+c)/3;
				cout<< "El promedio es: "<<promedio<<endl;
			}
			else cout<< c<<" no es valido"<<endl;
		}
		else cout<< b <<" no es valido"<<endl;
	}
	else cout<< a<<" no es valido"<<endl;
	getch();
}
